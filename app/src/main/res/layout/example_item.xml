<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:id="@+id/imageiv"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Title"
            android:layout_toRightOf="@id/imageiv"
            android:layout_toEndOf="@id/imageiv"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/pricetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imageiv"
            android:layout_toEndOf="@id/imageiv"
            android:layout_below="@id/title_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strikepricetv"
            android:layout_toRightOf="@id/pricetv"
            android:layout_below="@id/title_tv"
            android:layout_marginLeft="20dp"
            android:text="striked price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/weighttv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#DCDCDC"
            android:text="weight"
            android:layout_marginTop="15dp"
            android:layout_below="@id/pricetv"
            android:layout_toRightOf="@id/imageiv"
            android:layout_toEndOf="@id/imageiv"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:paddingHorizontal="20sp"
            />

        <Button
            android:id="@+id/additem_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/pricetv"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/weighttv"
            android:backgroundTint="#FFFFFF"
            android:paddingHorizontal="10sp"

            android:text="Add item"
            android:textAllCaps="false"
            android:textColor="#1E90FF"


            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>